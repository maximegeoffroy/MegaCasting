<Window x:Class="MegaCasting.Windows.ajouterDomaineMetier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ajouterDomaineMetier" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label>Libellé</Label>
            <TextBox x:Name="textBoxLibelle" Width="150"/>
            <Button x:Name="boutonAjouter" Content="Ajouter" Click="boutonAjouter_Click"/>
        </StackPanel>
    </Grid>
</Window>
