<Window x:Class="MegaCasting.Windows.ajouterTypeContrat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un type contrat" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Margin="0 25 0 0">Libellé</Label>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="textBoxLibelle" Width="140" HorizontalAlignment="Left" Margin="0 25 0 0"/>
            <Label Grid.Row="1" Grid.Column="1" x:Name="labelErreurLibelle" Visibility="Hidden" Foreground="Red" HorizontalAlignment="Left">Erreur de libellé</Label>
            <Button Grid.Row="1" Grid.Column="1" x:Name="boutonAjouter" Content="Ajouter" Click="boutonAjouter_Click" Margin="0 25 0 0" HorizontalAlignment="Left"/>
    </Grid>
</Window>
