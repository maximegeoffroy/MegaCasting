<Window x:Class="MegaCasting.Windows.ajouterTypeContrat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter un type contrat" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 65 0 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Label>Intitulé</Label>
                    <TextBox x:Name="textBoxLibelle" Width="150"/>
                </StackPanel>
                <StackPanel Grid.Row="1" >
                    <Button x:Name="boutonAjouter" Content="Ajouter" Click="boutonAjouter_Click" Width="100" Margin="0 10 0 0"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
